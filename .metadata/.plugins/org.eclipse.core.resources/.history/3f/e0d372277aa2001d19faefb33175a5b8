
public class Location {
	
	enum terrain {
		LAND,
		SEA,
		MOUNTAIN
	}
	private float latitude;
	private float longitude;
	private int altitudeAGL;
	private terrain terrainType;
	
	public Location() {
		this.latitude = 0;
		this.longitude = 0;
		this.altitudeAGL = 0;
		this.terrainType = terrain.LAND;
	}
	public Location(float latitude, float longitude, int altitudeAGL, terrain terrainType) {
		this.latitude = latitude;
		this.longitude = longitude;
		this.altitudeAGL = 0;
		this.terrainType = terrainType;
	}
	
	public float getLatitude() {
		return latitude;
	}
	public void setLatitude(float latitude) {
		this.latitude = latitude;
	}
	public float getLongitude() {
		return longitude;
	}
	public void setLongitude(float longitude) {
		this.longitude = longitude;
	}
	public float getAltitudeAGL() {
		return altitudeAGL;
	}
	public void setAltitudeAGL(float altitudeAGL) {
		altitudeAGL = (altitudeAGL < 0) ? 0 : altitudeAGL;
		this.altitudeAGL = altitudeAGL;
	}
	public String getTerrainType() {
		switch(terrainType) {
		case LAND:
			return "LAND";
		case SEA:
			return "SEA";
		case MOUNTAIN:
			return "MOUNTAIN";
		}
		return "OTHER";
		
	}
	
	public void setTerrainType(String terrainType) {
		if (terrainType == "LAND") {
			this.terrainType = terrain.LAND;
		} else if (terrainType == "SEA") {
			this.terrainType = terrain.SEA;
		} else if (terrainType == "MOUNTAIN") {
			this.terrainType = terrain.MOUNTAIN;
		} else {
			this.terrainType = terrain.LAND;
		}
	}

}
